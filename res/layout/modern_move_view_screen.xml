<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainscreenbackgroundblue">
    
	<LinearLayout
	    android:id="@+id/ModernLinearLayoutButtons"
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:layout_alignParentBottom="true"
	    android:background="@color/mainscreenbackgroundblue">

	    <Button
	        android:id="@+id/saveModernMove"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginBottom="5dp"
	        android:layout_marginLeft="5dp"
	        android:layout_marginRight="5dp"
	        android:layout_weight=".5"
	        android:background="@color/white"
	        android:paddingRight="10dp"
	        android:paddingLeft="10dp"
	        android:text="Save" />
		
		<Button
		    android:id="@+id/shuffleModernMove"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginBottom="5dp"
		    android:layout_marginLeft="5dp"
		    android:layout_marginRight="5dp"
		    android:layout_weight=".5"
		    android:background="@color/white"
		    android:paddingLeft="10dp"
		    android:paddingRight="10dp"
		    android:text="Shuffle" >

		</Button>
	</LinearLayout>

	<ListView
	    android:id="@+id/modernmovelistview"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_above="@+id/ModernLinearLayoutButtons"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true"
	    android:layout_marginLeft="10dp"
	    android:layout_marginRight="10dp"
	    android:layout_marginTop="10dp"
	    android:background="@color/mainscreenbackgroundblue"
	    android:divider="@android:color/transparent"
	    android:dividerHeight="15.0sp"
	    android:textSize="800sp" 
	    android:clickable="false">

	</ListView>

	

</RelativeLayout>
