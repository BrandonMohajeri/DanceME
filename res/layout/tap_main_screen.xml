<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainscreenbackgroundblue" >
    
    <ImageView
        android:id="@+id/tap_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="50dp"
        android:background="@color/mainscreenbackgroundblue"
        android:src="@drawable/tap_image" />
     
    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:src="@drawable/tap_text" />

    <Button
        android:id="@+id/loadButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tap_image"
        android:layout_alignLeft="@+id/tap_image"
        android:layout_alignRight="@+id/tap_image"
        android:layout_marginBottom="124dp"
        android:background="#FFFFFF"
        android:text="Load" />

    <Button
        android:id="@+id/createButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loadButton"
        android:layout_alignLeft="@+id/tap_image"
        android:layout_alignRight="@+id/tap_image"
        android:layout_marginBottom="40dp"
        android:background="#FFFFFF"
        android:text="Create" />

</RelativeLayout>
